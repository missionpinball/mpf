<?xml version="1.0" encoding="UTF-8" ?>
<window>
    <width>600</width>
    <height>200</height>
    <title>Mission Pinball Framework - Demo Man</title>
    <resizable>yes</resizable>
    <frame>yes</frame>
    <fullscreen>no</fullscreen>
    <fps>auto</fps>
    <quit_on_close>true</quit_on_close>
    <elements>
        <type>VirtualDMD</type>
        <width>512</width>
        <height>128</height>
        <h_pos>center</h_pos>
        <v_pos>center</v_pos>
        <pixel_color>ff5500</pixel_color>
        <dark_color>220000</dark_color>
        <layer>1</layer>
        <pixel_spacing>2</pixel_spacing>
    </elements>
    <elements>
        <type>Text</type>
        <font>tall title</font>
        <text>MISSION PINBALL FRAMEWORK</text>
        <h_pos>center</h_pos>
        <v_pos>top</v_pos>
        <y>3</y>
        <size>30</size>
        <antialias>yes</antialias>
        <layer>1</layer>
        <color>ffffff</color>
    </elements>
    <elements>
        <type>Shape</type>
        <shape>box</shape>
        <width>514</width>
        <height>130</height>
        <layer>2</layer>
        <thickness>2</thickness>
        <v_pos>center</v_pos>
        <h_pos>center</h_pos>
        <color>444444</color>
    </elements>
    <elements>
        <type>Text</type>
        <font>tall title</font>
        <text>DEMO MAN</text>
        <h_pos>right</h_pos>
        <v_pos>bottom</v_pos>
        <y>-3</y>
        <x>-42</x>
        <size>30</size>
        <antialias>yes</antialias>
        <layer>1</layer>
        <color>ff0000</color>
    </elements>
</window>
